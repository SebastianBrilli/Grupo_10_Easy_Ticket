<!DOCTYPE html>
<html lang="en">
<%- include('./partials/head', {title: 'Formulario de creación' }) %>

  <body>

    <%-include('./partials/header')%>

      <main>
        <div class="create-container">

          <div class="form-title">
            <h2>Iniciar Sesion:</h2>
          </div>

          <div class="form-container">
            <form action="/login" method="POST">

              <label class='form-label' for=userName">Ingrese su Usuario:</label>
              <input class="form-input" type="text" id="userName" name="userName" placeholder="Nombre de usuario" />

              <label class='form-label' for="pasword">Ingrese su Contraseña:</label>
              <input class="form-input" type="password" id="pasword" name="pasword" placeholder="Contraseña" />


              <div class='purchase-detail'>
                <button type="submit">
                  Confirmar
                </button>
              </div>
            </form>
          </div>
        </div>
      </main>
      <%-include('./partials/footer')%>
  </body>

</html>