<!DOCTYPE html>
<html lang="en">
<%- include('./partials/head', {title: 'Formulario de creación' }) %>

  <body>

    <%-include('./partials/header')%>

      <main>
        <div class="create-container">

          <div class="form-title">
            <h2>Iniciar Sesion:</h2>
          </div>

          <div class="form-container">
            <form action="/login" method="POST">

              <label class='form-label' for=userName">Ingrese su Email:</label>
              <input class="form-input" type="email" id="email" name="email" placeholder="Email" />
              <%if (locals.errors && errors.email){%>
                <p class="msgError"><%=errors.email.msg%> </p>
              <%}%>

              <label class='form-label' for="pasword">Ingrese su Contraseña:</label>
              <input class="form-input" type="password" id="password" name="password" placeholder="Contraseña" />

          
               
              <label class="form-label">
                    <input type="checkbox" class="form-input" name="remember_user">Recordar mi usuario
              </label>
                
              

              <div class='purchase-detail'>
                <button type="submit">
                  Confirmar
                </button>
              </div>
            </form>
          </div>
        </div>
      </main>
      <%-include('./partials/footer')%>
  </body>

</html>